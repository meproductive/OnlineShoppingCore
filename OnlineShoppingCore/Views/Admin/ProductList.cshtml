@model ProductListViewModel
@{
    ViewData["Title"] = "ProductList";
}

<h1>Admin ProductList</h1>
<hr />

@if(Model.Products.Count>0)
{
    <table class="">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>              
                    <td>@item.Name</td>
                    <td>
                        <a href="/admin/category/@item.Id">Edit</a>
                        <form action="/admin/DeleteCategory" method="post">
                             <input type="hidden" name="categoryId" value="@item.Id"/>
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h4>No Products</h4>
    </div>
}

