@model CategoryListViewModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Admin CategoryList</h1>
<hr />

@if (Model.Categories.Count > 0)
{
    <table class="">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Id</td>                  
                    <td>@item.Name</td>              
                    <td>
                        <a href="/admin/categories/@item.Id">Edit</a>
                        <form action="/admin/DeleteCategory" method="post">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h4>No Products</h4>
    </div>
}
