@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<section>
    <div class="wrapper">
        <div class="form-box register">
            <h2>Register</h2>
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="input-box">
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" required placeholder="Write your name here">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="input-box">
                    <label asp-for ="Surname">Surname</label>
                    <input type="text" asp-for="Surname" required placeholder="Write your surname here">
                    <span asp-validation-for="Surname"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Username">Username</label>
                    <input type="text" asp-for="Username" required placeholder="Write your surname here">
                    <span asp-validation-for="Username"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" required placeholder="Write your e-mail here">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" placeholder="Write your password here">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-box">
                    <label asp-for ="RePassword">Repassword</label>
                    <input type="password" asp-for="RePassword" placeholder="Write your password here">
                    <span asp-validation-for="RePassword"></span>
                </div>
                <div class="input-box">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input type="number" asp-for="PhoneNumber" required placeholder="Write your Phone Number here" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Adress">Adress</label>
                    <input type="text" asp-for="Adress" required placeholder="Write your adress here">
                    <span asp-validation-for="Adress"></span>
                </div>
                <div class="input-box">
                    <label asp-for="BirthDate">Birth Date</label>
                    <input type="date" asp-for="BirthDate" required>
                    <span asp-validation-for="BirthDate"></span>
                </div>
                <div class="remember-forgot">
                    <span class="d-flex"><input type="checkbox" value="true" name="IsActive"><label class="playfair">I agree to the terms and conditions</label></span>
                </div>
                <button type="submit" class="btn">Register</button>
                <div class="login-register">
                    <p>Already have an account?<a href="/Account/Login" class="login-link">Login</a></p>
                </div>
            </form>
        </div>
    </div>
</section>