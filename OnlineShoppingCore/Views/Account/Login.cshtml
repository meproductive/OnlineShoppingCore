@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section>
    <div class="wrapper">
        <div class="form-box login">
            <h2>Login</h2>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="input-box">
                    <label asp-for="Email">Email/Username</label>
                    <input type="text" asp-for="Email" required placeholder="Write your e-mail here">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-box">
                    <label asp-for="Password">Password</label>
                    <input type="password" asp-for="Password" required /> placeholder="Write your password here">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="remember-forgot d-flex">
                    <span class="d-flex"><input type="checkbox" value="true" name="RememberMe"><label class="playfair">Remember me</label></span>
                    <a href="#">Forgot Password?</a>
                </div>
                <button type="submit" class="btn">Login</button>
                <div class="login-register">
                    <p>Don't have an account?<a href="/Account/Register" class="register-link">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</section>
