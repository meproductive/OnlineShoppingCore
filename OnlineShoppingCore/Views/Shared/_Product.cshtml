@model Product

<div class="card-content">
    <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id"><img src="~/Image/@Model.Images[0].ImageUrl" alt="#" style="width:100%"></a>
    <h1><a href="#">@Model.Name</a></h1>
    <p class="price">@Model.Price</p>
    <p>@Model.Description</p>
    <p><button>Add to Cart</button></p>
</div>